<div class="container">
    <h1><%= @article.title %></h1>

    <%= raw @article.body %>
    <% if @article.image.present? %>
        <%# #show image %>
    <%= image_tag @article.image.url %>
    <% end %>

    <ul>
        <li><%= link_to "Edit", edit_article_path(@article) %></li>
        <li><%= link_to "Delete", article_path(@article), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        } %></li>
    </ul>

    <strong>Tags:</strong>
    <% @article.tags.each do |tag| %>
        <%= link_to tag, style: "text-direction-none" do%>
            <span class="tag"><%=tag.name.capitalize%></span>
        <%end%>
    <%end%>

    <h2>Comments</h2>
    <%# render method iterates over the article.comments %>
    <%= render @article.comments %>

    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
</div>